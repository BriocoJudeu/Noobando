@ECHO OFF

SET bot_name=ezBot
SET bot_exe=ezBot.exe
SET bot_path=C:\Riot Games\Lobot funcionando - Copy\ezBot.exe

SET elobuddy_path=C:\Program Files (x86)\EloBuddy\EloBuddy.Loader.exe



:start
tasklist /FI "IMAGENAME eq League of Legends.exe" 2>NUL | find /I /N "League of Legends.exe">NUL
if "%ERRORLEVEL%"=="1" (goto not_running)
if "%ERRORLEVEL%"=="0" (goto is_running)

goto start

:is_running
echo LOL is running
timeout /t 4000

TASKKILL /F /IM "%bot_exe%"
TASKKILL /F /IM "League of Legends.exe"
TASKKILL /F /IM "EloBuddy.Loader.exe"
timeout /t 3
start "EloBuddy" "%elobuddy_path%"
start "%bot_name%" "%bot_path%"

goto wait_launch

:not_running

echo LOL is not running
timeout /t 5
goto start

:wait_launch
echo Wait for game
tasklist /FI "IMAGENAME eq League of Legends.exe" 2>NUL | find /I /N "League of Legends.exe">NUL
if "%ERRORLEVEL%"=="1" (goto waiting)
if "%ERRORLEVEL%"=="0" (goto start)

goto waiting

:waiting
timeout /t 5
goto wait_launch
